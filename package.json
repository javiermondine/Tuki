{
  "name": "scout-group-website",
  "version": "1.0.0",
  "description": "Scout group website with forum functionality",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "vitest",
    "prebuild": "rm -rf dist && mkdir -p dist/scripts dist/styles dist/game",
    "build:js:scripts": "terser src/scripts/*.js -o dist/scripts/bundle.js -c -m",
    "build:js:game": "terser src/game/*.js -o dist/game/bundle.js -c -m",
    "build:css": "npx cssnano-cli src/styles/main.css dist/styles/main.css && npx cssnano-cli src/styles/forum.css dist/styles/forum.css && npx cssnano-cli src/styles/activities.css dist/styles/activities.css && npx cssnano-cli src/styles/game-style.css dist/styles/game-style.css",
    "build": "npm-run-all build:js:* build:css",
    "migrate:supabase": "node scripts/migrateToSupabase.js",
    "migrate:local": "bash -c 'set -a; [ -f .env.local ] && source .env.local; set +a; node scripts/migrateToSupabase.js'",
    "seed:local": "bash -c 'set -a; [ -f .env.local ] && source .env.local; set +a; node scripts/seedDemo.js'"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.3",
    "helmet": "^7.0.0",
    "mongodb": "^6.2.0"
  },
  "devDependencies": {
    "@vercel/node": "^2.3.0",
    "cssnano-cli": "^1.0.5",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "terser": "^5.31.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
